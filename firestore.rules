rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 用戶集合 - 用戶只能讀寫自己的資料
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // 允許服務端寫入（例如創建用戶檔案）
      allow create: if request.auth != null;
    }
    
    // 積分記錄集合 - 用戶只能讀取自己的記錄
    match /pointsRecords/{recordId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      // 不允許修改或刪除積分記錄（永久保存）
      allow update, delete: if false;
    }
    
    // 問卷集合
    match /surveys/{surveyId} {
      // 所有人都可以讀取已發布的問卷
      allow read: if request.auth != null;
      // 只有擁有者可以寫入自己的問卷
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // 回應記錄集合
    match /responses/{responseId} {
      // 用戶可以讀取自己的回應
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.respondentUidOrAnon ||
                      request.auth.uid == resource.data.respondentUid);
      // 可以創建和更新自己的回應
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                       (request.auth.uid == resource.data.respondentUidOrAnon ||
                        request.auth.uid == resource.data.respondentUid);
      // 不允許刪除回應
      allow delete: if false;
    }
    
    // 配對記錄集合
    match /matches/{matchId} {
      // 用戶可以讀取自己相關的配對
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.requesterUid ||
                      request.auth.uid == resource.data.counterpartUid);
      // 可以創建配對
      allow create: if request.auth != null;
      // 可以更新配對（標記完成等）
      allow update: if request.auth != null && 
                       (request.auth.uid == resource.data.requesterUid ||
                        request.auth.uid == resource.data.counterpartUid);
      // 不允許刪除配對記錄
      allow delete: if false;
    }
    
    // 選項集合（fields, topics, languages 等）- 所有人可讀
    match /options/{document=**} {
      allow read: if true;
      allow write: if false; // 只能通過管理端修改
    }
  }
}

